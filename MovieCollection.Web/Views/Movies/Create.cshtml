@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MovieCollection.Web.Models.Movie
<!DOCTYPE html>
<html>
<head>
    <title>Add Movie</title>
</head>
<body>
    <h4>Add Movie</h4>
    <form asp-controller="Movies" asp-action="Create">
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>

        <label asp-for="Director"></label>
        <input asp-for="Director" />
        <span asp-validation-for="Director"></span>

        <label asp-for="Year"></label>
        <input asp-for="Year" />
        <span asp-validation-for="Year"></span>

        <label asp-for="ExternalUrl"></label>
        <input asp-for="ExternalUrl" />
        <span asp-validation-for="ExternalUrl"></span>
        <br />
        <input type="submit" value="Save" />
    </form>
    <div asp-validation-summary="All"></div>

</body>
</html>
